{
  "name": "patron-ui",
  "version": "0.0.0",
  "scripts": {
    "ng": "npx ng",
    "extract-i18n": "ng extract-i18n --output-path src/locale",
    "start": "ng serve",
    "build": "ng build --configuration development",
    "build-with-localize": "ng build --configuration development --localize",
    "watch": "ng build --watch --configuration development",
    "watch-with-localize": "ng build --watch --configuration development --localize",
    "test": "ng test",
    "revert-index": "cp src/tools/index.html.dist src/index.html",
    "create-index": "cd src/tools && ./generate-index.pl",
    "minify-index": "cp src/index.html /tmp/index.html && html-minifier --collapse-whitespace --remove-comments --remove-tag-whitespace --minify-css true --minify-js true /tmp/index.html > ./src/index.html && rm /tmp/index.html",
    "build-prod": "ng build --configuration production",
    "build-prod-all": "npm run create-index && npm run minify-index && ng build --configuration production --localize 2>&1 | egrep -v 'Generating localized bundles|No translation found' && npm run revert-index",
    "lint": "ng lint"
  },
  "browserslist": [                                                            
    "last 3 chrome version",                                                   
    "last 3 firefox version",                                                  
    "last 1 safari version"                                                    
  ],  
  "private": true,
  "dependencies": {
    "@angular/cdk": "^18.2.5",
    "@angular/common": "^18.2.5",
    "@angular/compiler": "^18.2.5",
    "@angular/core": "^18.2.5",
    "@angular/forms": "^18.2.5",
    "@angular/material": "^18.2.5",
    "@angular/platform-browser": "^18.2.5",
    "@angular/platform-browser-dynamic": "^18.2.5",
    "@angular/router": "^18.2.5",
    "rxjs": "^7.8.1",
    "tslib": "^2.7.0",
    "zone": "^0.3.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.5",
    "@angular-eslint/builder": "^18.3.1",
    "@angular-eslint/eslint-plugin": "^18.3.1",
    "@angular-eslint/eslint-plugin-template": "^18.3.1",
    "@angular-eslint/schematics": "^18.3.1",
    "@angular-eslint/template-parser": "^18.3.1",
    "@angular/cli": "^18.2.5",
    "@angular/compiler-cli": "^18.2.5",
    "@angular/localize": "^18.2.5",
    "@types/jasmine": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "eslint": "^9.11.0",
    "html-minifier": "^4.0.0",
    "jasmine-core": "^5.3.0",
    "karma": "^6.4.4",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.1.0",
    "tailwindcss": "^3.4.12",
    "typescript": "^5.5.4"
  }
}
